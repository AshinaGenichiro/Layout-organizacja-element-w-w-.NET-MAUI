<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="formularz.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            HorizontalOptions="Center"
            >

            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label
                HorizontalOptions="Center"
                Text="Zaloguj sie"
            />
            <Label
                Text="Email:"
                HorizontalOptions="Center"
                />
            <Entry
                Keyboard="Email"
                HorizontalOptions="Center"
                WidthRequest="700"
            />
            <Label
                Text="Hasło:"
                HorizontalOptions="Center"
                />
            <Entry
                HorizontalOptions="Center"
                WidthRequest="700"
                Keyboard="Password"
            />
            <Label
                HorizontalOptions="Center"
                Text="Nie masz konta zarejestruj sie"/>
            <Button
                HorizontalOptions="Center"
                WidthRequest="500"
                Text="Zaloguj"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

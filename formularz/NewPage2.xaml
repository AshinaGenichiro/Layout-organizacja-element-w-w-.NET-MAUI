<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="formularz.NewPage2"
             Title="NewPage2">
    <VerticalStackLayout>
        <VerticalStackLayout
            Spacing="20">
            <Label 
            Text="Moja Galeria"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Style="{StaticResource Headline}"/>
        <Button
            Text="Dodaj zdjęcie"
            BackgroundColor="NavajoWhite"
            TextColor="Black"
            Margin="10"/>
        </VerticalStackLayout>
        <VerticalStackLayout>

            <ScrollView>
                <FlexLayout
                    x:Name="photosWrap"
                    Wrap="Wrap"
                    JustifyContent="SpaceAround"
                    >
                    <Grid HeightRequest="100" WidthRequest="100">
                        <BoxView BackgroundColor="Khaki" WidthRequest="100" HeightRequest="100"/>
                        <Image 
                              Source="dotnet_bot.png"
                              HeightRequest="100"
                              WidthRequest="100">

                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="alert"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                    <Grid HeightRequest="100" WidthRequest="100">
                        <BoxView BackgroundColor="YellowGreen" WidthRequest="100" HeightRequest="100"/>
                        <Image 
                              Source="dotnet_bot.png"
                              HeightRequest="100"
                              WidthRequest="100">

                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="alert"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                    <Grid HeightRequest="100" WidthRequest="100">
                        <BoxView BackgroundColor="Chartreuse" WidthRequest="100" HeightRequest="100"/>
                        <Image 
                             Source="dotnet_bot.png"
                             HeightRequest="100"
                             WidthRequest="100">

                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="alert"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                    <Grid HeightRequest="100" WidthRequest="100">
                        <BoxView BackgroundColor="WhiteSmoke" WidthRequest="100" HeightRequest="100"/>
                        <Image 
                             Source="dotnet_bot.png"
                             HeightRequest="100"
                             WidthRequest="100">

                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="alert"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                    <Grid HeightRequest="100" WidthRequest="100">
                        <BoxView BackgroundColor="Lavender" WidthRequest="100" HeightRequest="100"/>
                        <Image 
                             Source="dotnet_bot.png"
                             HeightRequest="100"
                             WidthRequest="100">

                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="alert"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                    <Grid HeightRequest="100" WidthRequest="100">
                        <BoxView BackgroundColor="Lavender" WidthRequest="100" HeightRequest="100"/>
                        <Image 
                              Source="dotnet_bot.png"
                              HeightRequest="100"
                              WidthRequest="100">

                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="alert"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                    <Grid HeightRequest="100" WidthRequest="100">
                        <BoxView BackgroundColor="Azure" WidthRequest="100" HeightRequest="100"/>
                        <Image 
                              Source="dotnet_bot.png"
                              HeightRequest="100"
                              WidthRequest="100">

                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="alert"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                </FlexLayout>
            </ScrollView>
        </VerticalStackLayout>
        <VerticalStackLayout
            Margin="10">
            <Label
                 x:Name="photoCountLabel"   
                 Text="Obecna ilość zdjęć: "
                 FontSize="25"
                 HorizontalOptions="Center"
                Margin="10"/>
            <HorizontalStackLayout HorizontalOptions="Center">
                <Button 
                      Text="Poprzednia strona"
                      BackgroundColor="NavajoWhite"
                      TextColor="Black"
                      WidthRequest="150"
                    Margin="5"/>
                <Button 
                      Text="Następna strona"
                      BackgroundColor="NavajoWhite"
                      TextColor="Black"
                      WidthRequest="150"
                    Margin="5"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>